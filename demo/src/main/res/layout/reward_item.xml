<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"

    >

    <ImageView
        android:id="@+id/reward_item_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:drawable/ic_menu_gallery"></ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reward_item_name_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/reward_item_sku_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20sp"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/reward_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#FF0000"></TextView>
</LinearLayout>
